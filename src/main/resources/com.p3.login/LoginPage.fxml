<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" styleClass="root" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.p3.login.LoginController">

    <!-- AnchorPane to make components responsive and centered -->
    <AnchorPane prefHeight="1000.0" prefWidth="1000.0">
        <children>
            <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

                <!-- Welcome Label -->
                <Label fx:id="welcomeText" styleClass="welcomeText" text="Velkommen">
                    <VBox.margin>
                        <Insets bottom="30.0" top="50.0" />
                    </VBox.margin>
                </Label>

                <!-- Subtitle Label -->
                <Label fx:id="subtitle" styleClass="subtitle" text="Registrer dine tider" />

                <!-- Error Message Label (Hidden by default) -->
                <Label fx:id="errorText" styleClass="errorText" text="Brugernavn ugyldigt" visible="false">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>

                <!-- Username TextField with max-width styling -->
                <TextField fx:id="usernameField" promptText="Brugernavn" styleClass="usernameField">
                    <VBox.margin>
                        <Insets top="20.0" bottom="20.0" />
                    </VBox.margin>
                </TextField>

                <!-- Login Button with padding for bottom spacing -->
                <Button fx:id="loginButton" styleClass="confirmButton" text="Login">
                    <VBox.margin>
                        <Insets top="20.0" bottom="50.0" />
                    </VBox.margin>
                </Button>
            </VBox>
        </children>
    </AnchorPane>
</VBox>
