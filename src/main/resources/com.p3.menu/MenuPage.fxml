<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" styleClass="root" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.p3.menu.MenuController">
    <AnchorPane prefHeight="1000.0" prefWidth="1000.0" VBox.vgrow="ALWAYS">
        <children>
            <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <children>
                    <HBox>
                        <children>
                            <Region HBox.hgrow="ALWAYS">
                                <HBox.margin>
                                    <Insets left="250.0" />
                                </HBox.margin>
                            </Region>
                            <Label fx:id="welcomeText" styleClass="welcomeText" text="Velkommen test" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Button fx:id="logOutButton" styleClass="defaultButton" text="Log Ud">
                                <HBox.margin>
                                    <Insets right="50.0" />
                                </HBox.margin>
                            </Button>
                        </children>
                        <VBox.margin>
                            <Insets bottom="100.0" />
                        </VBox.margin>
                    </HBox>
                    <Button fx:id="breakButton" styleClass="breakButton" text="Start Pause">
                        <VBox.margin>
                            <Insets bottom="50.0" />
                        </VBox.margin>
                    </Button>
                    <Button fx:id="endShiftButton" styleClass="endShiftButton" text="Afslut Vagt">
                        <VBox.margin>
                            <Insets bottom="50.0" />
                        </VBox.margin>
                    </Button>
                    <Region VBox.vgrow="ALWAYS" />
                    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                        <children>
                            <VBox alignment="BOTTOM_CENTER">
                                <children>
                                    <Button fx:id="historyButton" styleClass="defaultButton" text="Din Historik">
                                        <VBox.margin>
                                            <Insets bottom="50.0" />
                                        </VBox.margin>
                                    </Button>
                                    <Button fx:id="managerButton" styleClass="defaultButton" text="Manager Oversigt">
                                        <VBox.margin>
                                            <Insets bottom="100.0" />
                                        </VBox.margin>
                                    </Button>
                                </children>
                                <HBox.margin>
                                    <Insets left="50.0" />
                                </HBox.margin>
                            </VBox>
                            <Region HBox.hgrow="ALWAYS" />
                            <VBox>
                                <children>
                                    <Label fx:id="overviewLabel" styleClass="subtitle" text="Dagens Oversigt">
                                        <VBox.margin>
                                            <Insets left="50.0" />
                                        </VBox.margin>
                                    </Label>
                                    <ScrollPane fx:id="notificationPane" styleClass="notificationPane" VBox.vgrow="ALWAYS">
                                        <content>
                                            <VBox fx:id="notificationBox" styleClass="notificationBox" />
                                        </content>
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin>
                                    </ScrollPane>
                                </children>
                                <HBox.margin>
                                    <Insets right="250.0" />
                                </HBox.margin>
                            </VBox>
                            <Region HBox.hgrow="ALWAYS" />
                        </children>
                    </HBox>
                </children>
                <padding>
                    <Insets top="100.0" />
                </padding>
            </VBox>
        </children>
    </AnchorPane>
</VBox>
